<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div id="items">
  <% @items.each do |item| %>
    <%= render item %>
    <p>
      <%= link_to "Show this item", item %>
    </p>
  <% end %>
</div>

--------------

<%= link_to "New item", new_item_path %>

---------------

<h1>Deleted Items---</h1>

  <div id="deleted items">
  <% @items.only_deleted.each do |item| %>
    <%= render item %>
    <p>
      <%= link_to "Undelete", restore_item_path(item.id) %>
    </p>
  <% end %>
</div>
