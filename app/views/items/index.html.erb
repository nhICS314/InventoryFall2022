<p style="color: green"><%= notice %></p>
<h2><%= link_to "New item", new_item_path %></h2>
<table style="width: 100%;"><tr>
<td style="vertical-align: top;border: 1px solid;width: 50%;">
<h1>Items</h1>

<div id="items">
  <% @items.each do |item| %>
    <%= render item %>
    <p>
      <%= link_to "Show this item", item %>
    </p>
  <% end %>
</div>



</td>
<td style="vertical-align: top;border: 1px solid;width: 50%;">

<h1>Deleted Items</h1>

  <div id="deleted items">
  <% @items.only_deleted.each do |item| %>
    <%= render item %>
    <p>
      <%= link_to "Undelete", restore_item_path(item.id) %>
    </p>
  <% end %>
</div>
</td>
</tr></table>